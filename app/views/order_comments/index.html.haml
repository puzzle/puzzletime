- @title = 'Journal'

= render 'orders/header'

- if can?(:create_comment, @order)
  = render 'form'
- elsif entries.to_a.blank?
  .table= ti(:no_list_entries)

- if entries.to_a.present?
  .list
    = render partial: :order_comment, collection: entries, locals: { total_count: entries.size }
