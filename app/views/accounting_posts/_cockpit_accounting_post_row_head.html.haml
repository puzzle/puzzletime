%tr
  %td
    .title{title: row.label}
      = link_to_if(can?(:update, row.accounting_post),
                   row.shortnames,
                   edit_order_accounting_post_path(@order, row.accounting_post))
      - if row.accounting_post.closed?
        %span.small geschlossen
      - unless row.accounting_post.billable
        %i.options-icon.icon-dollar-stroke
      - if Settings.meal_compensation.active
        - if row.accounting_post.meal_compensation
          %i.options-icon.icon-restaurant
    .subtitle{title: row.name}= row.name
    .data-item
      %span.figure= f(row.offered_rate)
      %span.unit= "#{currency}/Std."