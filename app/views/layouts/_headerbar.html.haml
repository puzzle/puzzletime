#headerbar.navbar.navbar-default{role: 'navigation', class: ('lonely' unless @user)}
  .container-fluid
    .navbar-header
      .navbar-brand
        = image_tag 'logo.svg', size: '41x40'
        PuzzleTime
        = link_to Puzzletime.version, Puzzletime.changelog_url, class: 'version'
    %ul.nav.navbar-nav.navbar-right
      - if @user
        %li.navbar-user
          = link_to(settings_employees_path) do
            %i.icon-user
            = @user.label
      - if Settings.help.url
        %li
          = link_to(Settings.help.url) do
            %i.icon-help
      - if @user
        %li
          = link_to 'Logout', logout_path, method: :post
